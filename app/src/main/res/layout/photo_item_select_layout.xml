<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/selector_item_container"
    android:layout_width="@dimen/photo_item_small_card_width"
    android:layout_height="@dimen/photo_item_small_card_height"
    android:layout_margin="@dimen/photo_item_layout_margin"
    android:layoutDirection="inherit"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/photo_item_corner_radius"
    app:cardElevation="@dimen/photo_item_card_elevation">

    <FrameLayout
        android:id="@+id/small_card_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/photo_item_layout_margin">

        <ImageView
            android:id="@+id/small_card_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <CheckBox
            android:id="@+id/photo_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/photo_item_layout_margin"
            android:layout_gravity="end|top"/>

    </FrameLayout>

</androidx.cardview.widget.CardView>