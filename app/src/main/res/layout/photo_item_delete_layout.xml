<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/selector_item_container_del"
    android:layout_width="@dimen/photo_item_small_card_width"
    android:layout_height="@dimen/photo_item_small_card_height"
    android:layout_margin="@dimen/photo_item_layout_margin"
    android:layoutDirection="inherit"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/photo_item_corner_radius"
    app:cardElevation="@dimen/photo_item_card_elevation">

    <FrameLayout
        android:id="@+id/small_card_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/photo_item_layout_margin">

        <ImageView
            android:id="@+id/card_photo_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/photo_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:layout_margin="@dimen/photo_item_layout_margin"
            android:background="@null"
            android:src="@android:drawable/ic_menu_delete" />

    </FrameLayout>

</androidx.cardview.widget.CardView>